#include <iostream>
#pragma pack(1)

using namespace std;

struct MyStruct {
    int a;
    char b;
    double c;
};

int main() {
    MyStruct obj; // Звичайний об'єкт структури
    MyStruct* ptr = &obj; // Вказівник на структуру

    cout << "Size of the structure MyStruct: " << sizeof(MyStruct) << " byte" << endl;
    cout << "The size of the pointer to MyStruct: " << sizeof(ptr) << " byte" << endl;

    return 0;
}
